<?xml version="1.0"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">
	<portlet>
		<portlet-name>quotation</portlet-name>
		<display-name>quotation</display-name>
		<portlet-class>com.ail.pageflow.portlet.PageFlowPortlet</portlet-class>
		<init-param>
			<name>edit-jsp</name>
			<value>/edit.jsp</value>
		</init-param>
		<init-param>
			<name>configure-jsp</name>
			<value>/configure.jsp</value>
		</init-param>
		<init-param>
			<name>error-jsp</name>
			<value>/error.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>QuotationResources</resource-bundle>
		<portlet-info>
			<title>quotation</title>
			<short-title>quotation</short-title>
			<keywords>quotation</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

	<portlet>
		<portlet-name>pageflowContainer</portlet-name>
		<display-name>pageflow container</display-name>
		<portlet-class>com.ail.pageflow.portlet.PageFlowContainerPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/pageFlowContainer.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>PageFlowContainerResources</resource-bundle>
		<portlet-info>
			<title>Pageflow Container</title>
			<short-title>Pageflow</short-title>
			<keywords>pageflow container</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

	<portlet>
		<portlet-name>pageflowRemote</portlet-name>
		<display-name>pageflowRemote</display-name>
		<portlet-class>com.ail.pageflow.portlet.PageFlowRemotePortlet
		</portlet-class>
		<init-param>
      <name>error-jsp</name>
      <value>/error.jsp</value>
    </init-param>
    <init-param>
			<name>check-auth-token</name>
			<value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>PageFlowRemoteResources</resource-bundle>
		<portlet-info>
			<title>Pageflow Remote</title>
			<short-title>Pageflow Remote</short-title>
			<keywords>Pageflow Remote</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

	<portlet>
		<portlet-name>sandpit</portlet-name>
		<display-name>sandpit</display-name>
		<portlet-class>com.ail.pageflow.portlet.SandpitPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>SandpitResources</resource-bundle>
		<portlet-info>
			<title>sandpit</title>
			<short-title>sandpit</short-title>
			<keywords>sandpit</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

	<filter>
		<filter-name>HibernateSessionFilter</filter-name>
		<filter-class>com.ail.core.persistence.hibernate.HibernateSessionPortletFilter</filter-class>
		<lifecycle>RENDER_PHASE</lifecycle>
		<lifecycle>RESOURCE_PHASE</lifecycle>
		<lifecycle>EVENT_PHASE</lifecycle>	
		<lifecycle>ACTION_PHASE</lifecycle>
	</filter>

	<filter>
		<filter-name>PageFlowContextFilter</filter-name>
		<filter-class>com.ail.pageflow.portlet.PageflowContextPortletFilter</filter-class>
		<lifecycle>RENDER_PHASE</lifecycle>
		<lifecycle>RESOURCE_PHASE</lifecycle>
		<lifecycle>EVENT_PHASE</lifecycle>	
		<lifecycle>ACTION_PHASE</lifecycle>
	</filter>

	<filter-mapping>
		<filter-name>HibernateSessionFilter</filter-name>
		<portlet-name>pageflowContainer</portlet-name>
		<portlet-name>pageflowRemote</portlet-name>
		<portlet-name>quotation</portlet-name>
		<portlet-name>pageflowRemote</portlet-name>
		<portlet-name>sandpit</portlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>PageFlowContextFilter</filter-name>
		<portlet-name>pageflowContainer</portlet-name>
		<portlet-name>pageflowRemote</portlet-name>
		<portlet-name>quotation</portlet-name>
		<portlet-name>pageflowRemote</portlet-name>
        <!-- "sandpit" intentionally excluded. The sandpit does its own context handling so that it can also handle any exceptions that arise. -->
	</filter-mapping>
</portlet-app>