<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- 
 The settings in this file override the default settings for liferay logging which are 
 defined in portal-impl.jar ROOT.war/WEB-INF/lib/portal-impl.jar#META-INF/portal-log4j.xml 
 -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<category name="com.liferay.portal.deploy.hot.HotDeployImpl">
		<priority value="ERROR" />
	</category>

    <category name="com.liferay.portal.server.capabilities.ServerCapabilitiesUtil">
        <priority value="FATAL" />
    </category>

</log4j:configuration>
