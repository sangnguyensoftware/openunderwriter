<?xml version="1.0" encoding="ISO-8859-1"?>
<project default="build" name="openunderwriter:modules/com/ail/insurance.jar">
	<import file="../../../../BuildSettings.xml" />

	<target name="clean" description="delete everything that the build can generate">
		<delete-jar-macro />
	</target>

	<target name="_build">
		<compile-jar-macro module="yes" dependencies="com.google.lambdaj, com.liferay.portal, com.ail.core, com.ail.commercial, com.ail.pubnub, org.drools, org.janino, org.apache.commons.jxpath, org.apache.commons.lang, org.cglib, org.drools, org.hamcrest, org.hibernate, org.hibernate.envers, javax.persistence.api">
			<javac-classpath>
		        <dirset dir="${module.dir}/com/ail" includes="**/*.jar" />
		        <fileset dir="${module.dir}/com/ail" includes="**/*.jar" />
		        <fileset dir="${module.dir}/com/google/lambdaj" includes="**/*.jar" />
				<fileset dir="${jboss.dir}/bin/client" includes="jboss-client.jar" />
				<fileset dir="${module.dir}/com/liferay/portal" includes="**/*.jar" />
				<fileset dir="${module.dir}/javax/mail/api" includes="**/*.jar" />
				<fileset dir="${module.dir}/javax/servlet/api" includes="**/*.jar" />
		        <fileset dir="${module.dir}/javax/persistence/api" includes="**/*.jar" />
				<fileset dir="${module.dir}/org/drools" includes="**/*.jar" /> 
		        <fileset dir="${module.dir}/org/hamcrest" includes="**/*.jar" />
		        <fileset dir="${module.dir}/org/hibernate" includes="**/*.jar" />
		        <fileset dir="${module.dir}/org/hibernate/envers" includes="**/*.jar" />
			</javac-classpath>
		</compile-jar-macro>
	</target>

	<target name="build" description="compile (generate, copy, etc) all build outputs">
		<antcall target="_build" />
	</target>

	<target name="setup" description="run all the one-time-only steps - like copying libs into place">
	</target>

	<target name="teardown" description="undo whatever setup did">
	    <delete-module-macro />
	</target>
</project>
